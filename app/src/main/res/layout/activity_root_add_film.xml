<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.wrj.film.viewmodel.FilmAddViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/titleBar"
            layout="@layout/layout_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/contentItem_title"
                        android:text="电影名称:"
                        android:textColor="@color/text_color_important" />

                    <EditText
                        style="@style/contentItem_content"
                        android:hint="请输入电影名称"
                        android:singleLine="true"
                        android:text="@={data.title}"
                        android:textColor="@color/text_color_common" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/contentItem_title"
                        android:text="电影类型:"
                        android:textColor="@color/text_color_important" />

                    <TextView
                        android:id="@+id/tv_type"
                        style="@style/contentItem_content"
                        android:hint="请选择电影类型"
                        android:text="@{data.type}"
                        android:textColor="@color/text_color_common" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/contentItem_title"
                        android:text="电影时长:"
                        android:textColor="@color/text_color_important" />

                    <EditText
                        style="@style/contentItem_content"
                        android:hint="请输入时长，单位/分钟"
                        android:inputType="number"
                        android:singleLine="true"
                        android:text="@={data.duration}"
                        android:textColor="@color/text_color_common" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/contentItem_title"
                        android:paddingStart="@dimen/dp_10"
                        android:text="票   价   :"
                        android:textColor="@color/text_color_important" />

                    <EditText
                        style="@style/contentItem_content"
                        android:hint="请输入电影单价，单位/元"
                        android:inputType="numberDecimal"
                        android:text="@={data.money}"
                        android:singleLine="true"
                        android:textColor="@color/text_color_common" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/contentItem_title"
                        android:text="电影海报:"
                        android:textColor="@color/text_color_important" />

                    <ImageView
                        android:id="@+id/iv_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_12"
                        android:src="@drawable/add"
                        app:image="@{data.photoUrl}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/contentItem_title"
                        android:text="上映日期:"
                        android:textColor="@color/text_color_important" />


                    <TextView
                        android:id="@+id/tv_date"
                        style="@style/contentItem_title"
                        android:hint="请选择日期:"
                        android:text="@{data.dates}"
                        android:textColor="@color/text_color_important" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/contentItem_title"
                        android:text="上映时间:"
                        android:textColor="@color/text_color_important" />


                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/contentItem_title"
                        android:hint="请选择时间:"
                        android:text="@{data.times}"
                        android:textColor="@color/text_color_important" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/contentItem_title"
                        android:text="是否轮播:"
                        android:textColor="@color/text_color_important" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:checked="@={data.banner}"
                        android:text="轮播" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/contentItem_title"
                        android:text="是否热映:"
                        android:textColor="@color/text_color_important" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:checked="@={data.nowShowing}"
                        android:text="热映" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/contentItem_title"
                        android:text="电影简介:"
                        android:textColor="@color/text_color_important" />

                    <EditText
                        android:id="@+id/et_refuseReason"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_200"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/shape_stroke_fillet_gray"
                        android:gravity="top|start"
                        android:hint="请输入电影简介，100个字符以内"
                        android:maxLength="100"
                        android:padding="@dimen/dp_5"
                        android:paddingStart="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_30"
                        android:text="@={data.introduction}"
                        android:textSize="@dimen/sp_14"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
