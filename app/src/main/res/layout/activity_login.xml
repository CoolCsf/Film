<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="login"
            type="com.wrj.film.viewmodel.UserViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30">

        <ImageView
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_200"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/login_logo" />

        <EditText
            android:id="@+id/et_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:addTextChangedListener="@{login.userNameWatcher}"
            android:hint="账号"
            android:inputType="textPersonName"
            android:maxLength="10"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:lines="1"
            android:text="@={login.userName}"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:addTextChangedListener="@{login.pwdWatcher}"
            android:hint="密码"
            android:inputType="textPassword"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="10"
            android:lines="1"
            android:text="@={login.pwd}"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_registered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="注册账号"
            android:textColor="@color/text_color_important"
            android:textSize="@dimen/sp_15" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_35"
            android:background="@color/btn_next_green"
            android:enabled="@{login.canLogin}"
            android:text="@string/login"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_18" />

    </LinearLayout>
</layout>
