<?xml version="1.0" encoding="utf-8"?>
<com.tool.util.widget.CustomTitleBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titleBar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_48"
    android:background="@color/white"
    android:elevation="@dimen/dp_4"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingEnd="@dimen/dp_20"
            android:paddingStart="@dimen/dp_20"
            android:src="@drawable/icon_return"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titleBar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:text="标题"
                android:textColor="@color/text_color_important"
                android:textSize="@dimen/sp_18"
                android:visibility="gone" />

            <!--<ImageView-->
                <!--android:id="@+id/img_dropDown"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginStart="@dimen/dp_5"-->
                <!--android:src="@drawable/my_order_polygon"-->
                <!--android:visibility="gone" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="end|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/titleBar_img_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:src="@drawable/add"
                android:visibility="gone" />

            <!--<ImageView-->
                <!--android:id="@+id/titleBar_img_right2"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginEnd="@dimen/dp_10"-->
                <!--android:src="@drawable/alart"-->
                <!--android:visibility="gone" />-->

            <!--<ImageView-->
                <!--android:id="@+id/titleBar_img_right"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginEnd="@dimen/dp_10"-->
                <!--android:src="@drawable/home_information_collection_nor"-->
                <!--android:visibility="gone" />-->

            <TextView
                android:id="@+id/titleBar_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:gravity="center"
                android:text="管理"
                android:textColor="@color/text_color_important"
                android:textSize="@dimen/sp_16"
                android:visibility="gone" />

            <!--<ImageView-->
                <!--android:id="@+id/titleBar_menu"-->
